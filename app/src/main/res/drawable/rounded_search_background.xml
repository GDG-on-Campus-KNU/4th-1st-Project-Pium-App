<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#33888888" />

    <!-- 둥근 테두리 -->
    <corners android:radius="36dp" />

    <!-- 외곽선(선택사항) -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- 약한 그림자 느낌 (elevation용 뷰일 경우 안 써도 됨) -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />
</shape>
